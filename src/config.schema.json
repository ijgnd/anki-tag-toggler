{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Tag Toggler (Fork for 2.1)",   
    "additionalProperties": { 
        "type": "object",
        "properties": {
            "action": { 
                "type": "string",
                "enum": ["add", "delete", "toggle", "tag_dialog_shortcut"]
            },
            "tags": { 
                "type": "string"
             },
            "after": { 
                "type": "string",
                "enum": [
                    "bury-card",
                    "bury-note",
                    "suspend-card",
                    "suspend-note",
                    "suspend",
                    "bury"
                ]
             }
        },
        "additionalProperties": false
    }
}
